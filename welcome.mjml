      </mj-column>
    </mj-section>

    <!-- Features -->
    <mj-section mj-class="bg-lightblue" padding="38px 0">
      <mj-column padding="16px 0">
        <mj-image src="https://hawkacademy.s3.ap-southeast-2.amazonaws.com/emails/welcome/images/computer-icon.png" alt="Computer Icon" height="80px" width="100px" align="center" />
