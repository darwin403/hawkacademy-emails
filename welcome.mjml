<mjml>
  <mj-head>
    <mj-title>Welcome to Hawk Academy</mj-title>
    <mj-preview>Welcome to Hawk Academy</mj-preview>

    <mj-attributes>
      <!-- Attribute reset -->
      <mj-all font-family="Montserrat, sans serif" font-size="16px" font-weight="500" />
      <mj-all padding="0" align="none" />

      <mj-section padding="10px 30px" />
      <mj-hero padding="10px 30px" />

      <!-- MJ Classes -->
      <mj-class name="bg-white" background-color="#ffffff" />
      <mj-class name="bg-lightgray" background-color="#d3d3d3" />
      <mj-class name="bg-blue" background-color="#3db8ea" />
      <mj-class name="bg-lightblue" background-color="#f1f6f8" />

      <mj-class name="text-white" color="#ffffff" />
      <mj-class name="text-gray" color="#3a3a3a" />
      <mj-class name="text-blue" color="#3db8ea" />

      <mj-class name="font-extrabold" font-weight="800" />
    </mj-attributes>

    <!-- Custom Font -->
    <mj-font name="Montserrat" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;700;800&display=swap" />

    <!-- CSS Styles -->
    <mj-style inline="inline">
      a,
      a:visited,
      a:hover,
      a:active {
        color: inherit;
      }
    </mj-style>
    <mj-style>
      @media only screen and (max-width: 620px) {
        .bg-sm-none td {
          background-image: none !important;
        }
      }
    </mj-style>

  </mj-head>
