      <mj-column padding="16px 0">
        <mj-image src="https://hawkacademy.s3.ap-southeast-2.amazonaws.com/emails/welcome/images/questions-icon.png" alt="Questions Icon" height="80px" width="73px" align="center" />
        <mj-spacer height="16px" />
        <mj-text mj-class="text-gray font-extrabold" font-size="21px" line-height="24px" align="center"><span style="color:#3db8ea;"> Questions?</span> <br />
          We're here <br />
          to help
        </mj-text>
        <mj-spacer height="16px" />
        <mj-button href="https://hawkacademy.co/faqs/" title="Visit our FAQs page" mj-class="bg-blue text-bold" border-radius="0" inner-padding="16px 15px" font-size="12px" align="center">
          Visit our FAQs page
        </mj-button>
      </mj-column>
    </mj-section>

